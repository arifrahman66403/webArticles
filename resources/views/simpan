aria-current="{{ $active ? 'page' : false }}">{{$slot}}</a>



public function adminIndex()
    {
        $query = Post::all();

        // Filter: Pencarian teks
        if (request('search')) {
            $search = request('search');
            $query->where(function ($q) use ($search) {
                $q->where('title', 'like', "%{$search}%")
                ->orWhere('body', 'like', "%{$search}%");
            });
        }

        $setting = Setting::firstOrCreate(['id' => 1]);
        $authors = User::whereIn('role', ['admin', 'author'])->get(); //  ambil user yang role-nya admin atau author
        $categories = Category::all();
        
        $posts = $query->orderBy($setting->default_order_by, $setting->default_order_dir)
            ->when($setting->filter_author_id, function ($query) use ($setting) {
                $query->where('author_id', $setting->filter_author_id);
            })
            ->when($setting->filter_category_id, function ($query) use ($setting) {
                $query->where('category_id', $setting->filter_category_id);
            })
            ->paginate($setting->posts_per_page);

        return view('posts.index', [
            'title' => 'All Posts',
            'posts' => $posts,
            'setting' => $setting,
            'authors' =>  $authors, // panggil from compact('$authors')
            'categories' => $categories,
        ]);
    }